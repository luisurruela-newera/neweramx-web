---
import { library } from "@fortawesome/fontawesome-svg-core";
import { faCheckCircle, faUsers, faPhoneAlt, faLaptop, faChevronLeft, faChevronRight } from "@fortawesome/free-solid-svg-icons";
import { faSquareFacebook, faSquareXTwitter, faLinkedin } from "@fortawesome/free-brands-svg-icons";

library.add(faCheckCircle, faUsers, faPhoneAlt, faLaptop, faSquareFacebook, faSquareXTwitter, faLinkedin, faChevronLeft, faChevronRight);

interface Props {
  name: string;
  class?: string;
  [key: string]: any;
}

const { name, class: className, ...rest } = Astro.props;
---

<i class:list={[name, className]} {...rest}></i>
