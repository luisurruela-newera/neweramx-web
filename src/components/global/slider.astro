---
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";

interface Props {
  config: {
    background?: string;
    slidesPerView: number;
    height?: number;
    width?: string;
    items: ISlider[];
  };
}

interface ISlider {
  image?: string;
  title?: string;
  description?: string;
  background?: string;
  overlayBackground?: string;
  button?: {
    url: string;
    text: string;
    classes: string;
  };
}

const { config } = Astro.props;
const sliderHeight = config.height || 420;
const sliderId = `slider-${Math.random().toString(36).substr(2, 9)}`;
---

<div class="swiper-container" style={`height: ${sliderHeight}px; max-width: ${config.width}`} id={sliderId}>
  <div class="swiper-wrapper">
    {
      config.items.map((slide: ISlider) => (
        <div
          class={`swiper-slide ${config.background ? config.background : "bg-primary"}`}
          style={`background: url(${slide.background}) center center no-repeat; background-size: cover;`}
        >
          <div class="overlay" style={`background: ${slide.overlayBackground}`} />
          <div class="container content-container">
            <div class="col-8 me-auto">
              {slide.image ? <img src={`/assets/images/${slide.image}`} alt={slide.title} /> : null}
              <div class="p-4 text-white">
                <div class="p-1 border-start border-4 ps-5 border-secondary mb-4">
                  {slide.title ? <h2 class="text-bold text-super-large">{slide.title}</h2> : null}
                </div>
                {slide.title ? <p>{slide.description}</p> : null}
                {slide.button ? (
                  <a href={slide.button.url} class={`btn ${slide.button.classes}`}>
                    {slide.button.text}
                  </a>
                ) : null}
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
  <div class={`swiper-pagination ${config.background ? "light" : "dark"}`}></div>
  <div class={`swiper-button-prev ${config.background ? "light" : "dark"}`}></div>
  <div class={`swiper-button-next ${config.background ? "light" : "dark"}`}></div>
</div>

<script define:vars={{ slidesPerView: config.slidesPerView, sliderId }} type="module">
  import Swiper from "/node_modules/swiper/swiper-bundle.mjs";
  import { Navigation, Pagination } from "/node_modules/swiper/modules/index.mjs";

  document.addEventListener("DOMContentLoaded", () => {
    new Swiper(`#${sliderId}`, {
      modules: [Navigation, Pagination],
      loop: true,
      pagination: {
        el: `#${sliderId} .swiper-pagination`,
        clickable: true,
      },
      navigation: {
        nextEl: `#${sliderId} .swiper-button-next`,
        prevEl: `#${sliderId} .swiper-button-prev`,
      },
      slidesPerView: slidesPerView,
      spaceBetween: 30,
      slidesPerGroup: slidesPerView,
    });
  });
</script>

<style lang="scss">
  @use "../../styles/global/_config.scss" as *;

  .swiper-container {
    width: 100%;
    position: relative;
    overflow: hidden;

    &:hover {
      .swiper-button-prev,
      .swiper-button-next {
        opacity: 1;
        transform: translateY(-50%) translateX(0);
      }
    }
  }

  .swiper-slide {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;

    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: rgba($primary-color, 0.5);
      z-index: 1;
    }

    .content-container {
      position: relative;
      z-index: 2;
    }
  }

  .swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .swiper-button-prev,
  .swiper-button-next {
    position: absolute;
    top: 55%;
    transform: translateY(-50%);
    color: $secondary-color;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40px;
    z-index: 10;
    opacity: 0;
    transition: all 0.3s ease-in-out;

    &:hover {
      background-color: $white-color;
    }
  }

  .swiper-button-prev.dark {
    background-color: transparent;
  }

  .swiper-button-next.dark {
    background-color: transparent;
  }

  .swiper-button-prev {
    left: 15px;
    transform: translateY(-50%) translateX(-100%);
  }

  .swiper-button-next {
    right: 15px;
    transform: translateY(-50%) translateX(100%);
  }

  .swiper-button-prev::after {
    content: "\f104";
    font-family: "Font Awesome 5 Free";
    font-weight: 900;
    opacity: 100%;
  }

  .swiper-button-next::after {
    content: "\f105";
    font-family: "Font Awesome 5 Free";
    font-weight: 900;
    opacity: 100%;
  }

  .swiper-container .swiper-pagination {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
  }

  .swiper-container .swiper-pagination .swiper-pagination-bullet {
    width: 10px;
    height: 10px;
    background-color: rgba($dark-color, 0.4) !important;
    border-radius: 50%;
    margin: 0 5px;
    opacity: 1 !important;
  }

  .swiper-container .swiper-pagination .swiper-pagination-bullet-active {
    background-color: rgba($secondary-color, 1) !important;
    opacity: 1 !important;
  }

  :global(.dark .swiper-pagination-bullet) {
    background-color: rgba($white-color, 0.2) !important;
  }

  :global(.dark .swiper-pagination-bullet-active) {
    background-color: rgba($secondary-color, 1) !important;
  }
</style>
