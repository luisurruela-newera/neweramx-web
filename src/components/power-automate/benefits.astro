---
import Card from "../global/card.astro";

const beneficios = [
  {
    icon: "enhanced-connectivity.png",
    title: "Conectividad mejorada",
    body: "Conectividad sin interrupciones con cientos de aplicaciones y fuentes de datos, con conectores prediseñados y personalizados.",
    classes: "border-secondary-1 hover-secondary",
  },
  {
    icon: "ai-advantage.png",
    title: "Ventaja de la IA",
    body: "Perfeccione y reconstruya los procesos operativos para aumentar la eficiencia y la productividad con información basada en IA.",
    classes: "border-secondary-1 hover-secondary",
  },
  {
    icon: "cost-savings-1.png",
    title: "Ahorro de costos",
    body: "Los paquetes de suscripción flexibles le permiten eliminar los costos iniciales. La automatización libera recursos manuales y permite mejor utilización de los recursos",
    classes: "border-secondary-1 hover-secondary",
  },
];

const beneficios2 = [
  {
    icon: "accuracy-and-productivity.png",
    title: "Precisión y productividad",
    body: "Los procesos automatizados obtienen una alta puntuación en precisión y aumento de la productividad en comparación con los procesos manuales.",
    classes: "border-secondary-1 hover-secondary",
  },
  {
    icon: "hyperautomation.png",
    title: "Hiperautomatización",
    body: "Desarrolle automatización avanzada con bots de autoaprendizaje que analizan constantemente las transacciones y los datos y mejoran su funcionalidades.",
    classes: "border-secondary-1 hover-secondary",
  },
];
---

<section class="py-5">
  <div class="container py-3 text-center">
    <h2 class="text-primary mb-5">Ventajas de Power Automate</h2>
    <div class="row py-1">
      {
        beneficios.map((config) => (
          <div class="col-md-4 mb-4 card-group">
            <Card config={config} />
          </div>
        ))
      }
    </div>
    <div class="col-md-8 mx-auto">
      <div class="row py-1">
        {
          beneficios2.map((config) => (
            <div class="col-md-6 card-group">
              <Card config={config} />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
