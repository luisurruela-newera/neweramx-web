---
import Card from "@components/global/card.astro";
import { cardConfig } from "./services";
---

<section id="services" class="py-5 bg-light">
  <div class="container py-3">
    <div class="col-md-8 mx-auto text-center">
      <h2 class="text-primary mb-5">Soluciones y Servicios de New Era Technology</h2>
    </div>
    <div class="row">
      {
        cardConfig.map((config) => (
          <div class="col-md-4 card-group mb-3">
            <Card config={config} />
          </div>
        ))
      }
    </div>
  </div>
</section>
