---
import Card from "@components/global/card.astro";

const cardConfig = [
  {
    title: "Sistema de Ejecución de Laboratorio (LES)",
    icon: "les.svg",
    classes: "border-0 shadow shadow-md",
  },
  {
    title: "Soluciones móviles",
    icon: "mobile-solutions.svg",
    classes: "border-0 shadow shadow-md",
  },
  {
    title: "Servicios en la nube",
    icon: "cloud-services.svg",
    classes: "border-0 shadow shadow-md",
  },
  {
    title: "Análitica avanzada",
    icon: "advanced-analytics.svg",
    classes: "border-0 shadow shadow-md",
  },
];
---

<section id="feature" class="py-5">
  <div class="container py-3 text-center px-5">
    <h2 class="text-primary mb-4">Algunas funcionalidades destacadas</h2>
    <div class="row">
      {
        cardConfig.map((config) => (
          <div class="col-md-3 mb-0 card-group">
            <Card config={config} />
          </div>
        ))
      }
    </div>
  </div>
</section>
